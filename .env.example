# Local demo DB (no cloud creds)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mailminder?sslmode=disable

# API write protection (UI will add this header if you set it)
MAILMINDER_API_KEY=dev-key

# Poller settings (unused in demo but safe defaults)
MAILMINDER_QUERY=newer_than:3d is:unread category:primary
MAILMINDER_MAX_MSGS=25

# Model (leave empty in demo; summarizer uses fake mode)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
